{
    "name": "vscode-ti",
    "displayName": "VSCode-Ti",
    "description": "Adds support for Ti-BASIC, eZ80 assembly, and the CE-Toolchain to Visual Studio Code.",
    "version": "0.0.1",
    "publisher": "ItsMajestiX",
    "license": "MIT",
    "engines": {
        "vscode": "^1.38.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./dist/extension",
    "activationEvents": [
        "onCommand:disassembleBasic"
    ],
    "contributes": {
        "commands": [
            {
                "command": "vscode-ti.disassembleBasic",
                "title": "Disassemble .8xp",
                "enablement": "resourceExtname == .8xp"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "vscode-ti.disassembleBasic",
                    "when": "resourceExtname == .8xp"
                }
            ]
        },
        "languages": [
            {
                "id": "ti-basic",
                "aliases": [
                    "Ti-BASIC",
                    "ti-basic"
                ],
                "extensions": [
                    ".tibasic"
                ],
                "configuration": "./tibasic-language-configuration.json"
            },
            {
                "id": "ez80-asm",
                "aliases": [
                    "ez80-Assembler"
                ],
                "extensions": [
                    ".asm",
                    ".ez80",
                    ".inc"
                ],
                "configuration": "./ez80-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ti-basic",
                "scopeName": "source.tibasic",
                "path": "./syntaxes/ti-basic.tmLanguage.json"
            },
            {
                "language": "ez80-asm",
                "scopeName": "source.asm",
                "path": "./syntaxes/ez80-asm.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "compile": "tsc -p ./",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test-compile": "tsc -p ./",
        "test": "node ./out/test/runTest.js",
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.14.18",
        "@types/vscode": "^1.38.0",
        "glob": "^7.1.4",
        "mocha": "^6.1.4",
        "ts-loader": "^6.1.2",
        "tslint": "^5.20.0",
        "typescript": "^3.6.3",
        "vscode-test": "^1.0.0-next.0",
        "webpack": "^4.40.2",
        "webpack-cli": "^3.3.9"
    },
    "extensionDependencies": [
        "ms-vscode.cpptools"
    ],
    "dependencies": {
        "vscode-uri": "^2.0.3"
    }
}
